<% content_for :default_stylesheets do %>
  <%= stylesheet_link_tag 'application-notheme' %>
<% end %>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'auth/register' %>
<% end %>

<% content_for :signup_active, 'active' %>

<% content_for :content do %>
  <div class="container">
    <% if !resource.errors.empty? %>
      <div class="alert alert-flash alert-danger fade in alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h4>Couldn't sign up</h4>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message.html_safe %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="container">
    <div class="col-md-offset-4 col-md-4">
      <img src="<%= image_path('RFINALSQUARE.png') %>" alt="Our logo" class="img-responsive center-block logo">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form', class: 'signup-form'}) do |f| %>
        <div class="form-group">
          <%= f.text_field :first_name, autofocus: true, required: true, class: 'form-control', placeholder: 'First name' %>
        </div>
        <div class="form-group">
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
        </div>
        <div class="form-group">
          <%= f.select :gender, User.genders.map { |g| [g[0].humanize, g[0]] }, { prompt: "Select Gender" }, { class: "form-control", required: true } %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, required: true, class: 'form-control', placeholder: 'Email' %>
        </div>
        <div class="form-group">
          <%= f.text_field :username, required: true, class: 'form-control', placeholder: 'Username' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, required: true, class: 'form-control', placeholder: 'Password' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, required: true, class: 'form-control', placeholder: 'Confirm password' %>
        </div>
        <button type="submit" class="btn btn-default btn-block fancy-button hvr-fade">Create an account</button>
      <% end %>
      <%# render "devise/shared/links" #%>
    </div>
  </div>
<% end %>

<% content_for :footer do %>
  <div></div>
<% end %>
